@{
    ViewData["Title"] = "Home Page";
}
<html>
<body style="background-color: black" id="display">
    <div class="text-center" style="font-family: Impact; color: bisque; font-size: 20px">
        <h1 class="display-4">Welcome to the Dark Souls Imaginarium</h1>
        <label for="class">Select Your Starting Class</label><br />
        <form onchange="display()">
            <select id="select">
                <option value=""></option>
                <option value="Knight">Knight</option>
                <option value="Warrior">Warrior</option>
                <option value="Cleric">Cleric</option>
                <option value="Deprived">Deprived</option>
                <option value="Thief">Thief</option>
                <option value="Mercenary">Mercenary</option>
                <option value="Sorcerer">Sorcerer</option>
                <option value="Assassin">Assassin</option>
                <option value="Pyromancer">Pyromancer</option>
            </select>
        </form>
        <br />
        <table align="center" border="1" style="border: 2px solid white">
            <tr>
                <td>Starting Class: </td>
                <td id="yourClass"> ------- </td>
            </tr>
            <tr>
                <td>Starting Level: </td>
                <td id="newLevel"> 0 </td>
            </tr>
            <tr>
                <td>Vigor: </td>
                <td id="newVig"> 0 </td>
            </tr>
            <tr>
                <td>Attunement: </td>
                <td id="newAtt"> 0 </td>
            </tr>
            <tr>
                <td>Endurance: </td>
                <td id="newEnd"> 0 </td>
            </tr>
            <tr>
                <td>Vitality: </td>
                <td id="newVit"> 0 </td>
            </tr>
            <tr>
                <td>Strength: </td>
                <td id="newStr"> 0 </td>
            </tr>
            <tr>
                <td>Dexterity: </td>
                <td id="newDex"> 0 </td>
            </tr>
            <tr>
                <td>Intelligence: </td>
                <td id="newInt"> 0 </td>
            </tr>
            <tr>
                <td>Faith: </td>
                <td id="newFth"> 0 </td>
            </tr>
            <tr>
                <td>Luck: </td>
                <td id="newLuck"> 0 </td>
            </tr>
        </table>

        <button id="saveClass" onclick="alert('Yes.')">Create Unkindled</button>

        <script src="~/js/site.js"></script>
    </div>
</body>
</html>
